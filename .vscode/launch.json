{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debug: build index",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/build_index.py",
            "console": "integratedTerminal",
            "args": [
                "-t",
                "ignore/wiki.test.tokens",
                "-pp",
                "data/test",
            ]
        },
        {
            "name": "Debug: BUILD SEG",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/build_segments.py",
            "console": "integratedTerminal",
            "args": [
                "-t",
                "ignore/wiki.test.tokens",
                "-pp",
                "data/test",
                "-m",
                "1100",
            ]
        },
        {
            "name": "Debug: WATCH seg",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/watch_segments.py",
            "console": "integratedTerminal",
            "args": [
                "-t",
                "ignore/wiki.test.tokens",
                "-pp",
                "data/test",
                "-m",
                "1100",
                "--verbose"
            ]
        },
        {
            "name": "Debug: encode seg",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/encode_segments.py",
            "console": "integratedTerminal",
            "args": [
                "-t",
                "ignore/wiki.test.tokens",
                "-pp",
                "data/test",
                "-m",
                "1100",
                "-bs",  // batch size
                "50",
                "-bl",  // buffer length, write every so often
                "80"
            ]
        },
        {
            "name": "Debug: lookup",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/lookup.py",
            "console": "integratedTerminal",
            "args": [
                "-t",
                "ignore/wiki.test.tokens",
                "-pp",
                "data/test",
                "-m",
                "1100",
            ]
        },
        {
            "name": "watch segments",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/gen/watch_segments.py",
            "console": "integratedTerminal",
            "args": [
                "-t",
                "ignore/wiki.test.tokens",
                "-pp",
                "data/test",
                "-m",
                "1100",
            ]
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}